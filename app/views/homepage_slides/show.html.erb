<% content_for :body_content_title do %>
  <%= @homepage_slide.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @homepage_slide.title %>
  </div>
  
  <div>
    <h3>Body</h3>
    <%= @homepage_slide.body %>
  </div>
  
  <div>
    <h3>Photo</h3>
    <%= image_fu @homepage_slide.photo, nil %>
  </div>
  
  <div>
    <h3>Link</h3>
    <%= @homepage_slide.link %>
  </div>
  
  <div>
    <h3>Enabled</h3>
    <%= @homepage_slide.enabled %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="homepage_slides">
    <% @homepage_slides.each do |homepage_slide| %>
      <li>
        <%= link_to homepage_slide.title, homepage_slide_url(homepage_slide) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
